# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME?sslmode=require
# For Neon: Use the connection string from Neon Console (include ?sslmode=require)
# For local PostgreSQL: postgresql://postgres:password@localhost:5432/be_nurse_db
DATABASE_URL="postgresql://postgres:password@localhost:5432/be_nurse_db"

# NextAuth Configuration
# Generate a random secret: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your-secret-key-here-generate-a-random-one"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (SMTP)
# For Gmail: Use App Password (not your regular password)
# Generate App Password: https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="BE NURSE <noreply@benurse.com>"
SMTP_TO_NURSES="nurse1@example.com,nurse2@example.com"
